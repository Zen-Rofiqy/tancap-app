<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.hikam.tancap.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.hikam.tancap.ui.NewsFragment"
        android:label="News"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/catalogFragment"
        android:name="com.hikam.tancap.ui.CatalogFragment"
        android:label="Catalog"
        tools:layout="@layout/fragment_catalog" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.hikam.tancap.ui.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_viewPageFragment"
            app:destination="@id/viewPageFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/viewPageFragment"
        android:name="com.hikam.tancap.ui.onboarding.ViewPageFragment"
        android:label="Onboarding"
        tools:layout="@layout/fragment_view_page">
        <action
            android:id="@+id/action_viewPagerFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/viewPageFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>
